Algoritmo dia_de_la_semana
	escribir "introduce el numero de dia"
	leer num;
	segun num hacer
		1:escribir "es lunes";
		2:escribir "es martes";
		3:escribir "es miercoles";
		4:escribir "es jueves";
		5:escribir "es viernes";
		6:escribir "es sabado";
		7:escribir "es domingo";
	de otro modo
		escribir "no es un dia de la semana";
	FinSegun
	
FinAlgoritmo
